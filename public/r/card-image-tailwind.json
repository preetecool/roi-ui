{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "card-image-tailwind",
  "type": "registry:block",
  "title": "Card Image (Tailwind)",
  "description": "A card component with image, title, description, and button.",
  "registryDependencies": [
    "https://roiui.com/r/button-tailwind.json",
    "https://roiui.com/r/card-tailwind.json"
  ],
  "files": [
    {
      "path": "registry/brook/tailwind/blocks/card-image.tsx",
      "content": "import { Button } from \"@/registry/brook/tailwind/ui/button\";\nimport {\n  Card,\n  CardContent,\n  CardFooter,\n  CardImage,\n  CardTitle,\n} from \"@/registry/brook/tailwind/ui/card\";\n\nexport default function CardImageDemo() {\n  return (\n    <Card\n      className=\"max-w-full rounded-[16px] sm:max-w-[360px] sm:rounded-[24px]\"\n      variant=\"lift\"\n    >\n      <CardImage\n        alt=\"Veiled woman gazing at architecture under the night sky\"\n        className=\"w-auto rounded-[8px] sm:rounded-[12px]\"\n        src=\"/scene_01.png\"\n      />\n\n      <CardContent>\n        <CardTitle className=\"m-0 max-sm:text-[1.125rem] max-sm:leading-[1.3]\">\n          Threshold\n        </CardTitle>\n        <p className=\"m-0 text-[var(--muted-foreground)] max-sm:text-[0.9375rem] max-sm:leading-[1.5]\">\n          Between what we build and what eternally exists standing in quiet\n          contemplation.\n        </p>\n      </CardContent>\n\n      <CardFooter>\n        <Button showArrow size=\"sm\" variant=\"outline\">\n          Learn More\n        </Button>\n      </CardFooter>\n    </Card>\n  );\n}\n",
      "type": "registry:file",
      "target": "~/components/blocks/card-image/card-image.tsx"
    }
  ]
}